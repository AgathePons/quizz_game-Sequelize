<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">Administration</h2>
  <p class="lead">Espace permettant de modifier un tag</p>
</div>

<div class="row">
  <div class="col-12">
    <h3>Modifier le tag <%= tag.name %></h3>
    <form action="" method="POST">
      <div class="form-group">
        <label for="newTag">Nouveau nom</label>
        <input type="text" class="form-control" id="newTagName" name="newTagName">
      </div>
      <button type="submit" class="btn btn-primary">Valider</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-3 p-4 text-center">
    <a class="btn btn-block btn-lg tag tag--<%= tag.name.toLowerCase() %>" href="/quizzes/tag/<%= tag.id %>">
      <%= tag.name %>
    </a>
  </div>
</div>



<%- include('partials/footer') %>